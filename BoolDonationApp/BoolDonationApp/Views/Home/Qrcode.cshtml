
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Qrcode</title>
</head>
<body style="margin: 0px;
        overflow: hidden;
      background: rgb(242, 242, 242);
      box-sizing: border-box;
      color: rgb(255, 255, 255);
      ">

    <div style="background: #19181a; position: absolute; inset: 0px; overflow: hidden; display: flex; z-index: 0;height:100% ">
        @if (ViewBag.QrCodeImage != null)
        {
            <div style="grid-template-columns: 100%; position: relative; max-width: 375px; max-height: 719px; width: 100%; height: 100%; overflow: hidden; margin: auto; border-radius: 32px; transform: translate3d(0px, 0px, 0px); background: linear-gradient(#00b5fc, #fcf0e7); ">
               
                <div style="text-align:center;padding:10px">
                    <div style=" display:flex;align-items:center">
                        <img src="~/Content/Images/dai hoi 1.png" style="width:50px;height:50px;padding-right:10px; " />
                        <h3>BVDN</h3>
                    </div>
                    <div style="padding:10px 40px">
                        <div style="padding-top:14px">
                            <img src="~/Content/Images/kindpng_1184426.png" style="width:50px;height:80px" />
                            <h3 style=" margin-top: 0px; margin-bottom: 0px; font-size: 25px; color: #2a2c2d;padding-top:8px ">Hiến máu tình nguyện</h3>
                            <p style="text-align: center; color: #747576 ">Với mỗi lần hiến máu bạn có thể mang lại cơ hội cứu sống 3 người.Hãy cứu lấy mạng người bằng ít máu của mình</p>
                            
                        </div>
                        <div style="position:relative">
                            <h3 style="background: #00b5fc; padding: 6px 6px; margin-left: 30px; margin-right: 30px; border-radius: 32px; position: absolute; bottom: -25px; left: 30px; ">@ViewBag.Qrcodechecks</h3>
                            <img src="@ViewBag.QrCodeImage" style="height: 100%; width: 100%; border-radius: 32px;" />
                        </div>
                         <div>
                             <p style="color: #dc3545; margin-top: 43px; text-align: left; ">Quý vị vui lòng giữ mã thẻ này trong lúc đi hiến máu</p>
                         </div>
                    </div>
                    
                </div>

            </div>

        }
    </div>
</body>
</html>
