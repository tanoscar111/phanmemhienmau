@model IEnumerable<BoolDonationApp.Common.connectBoodandUserbatch>

@{
    ViewBag.Title = "SortByNo";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />


<h2>Danh sách đã hiến máu</h2>
<table class="table-responsive table table-striped table-hover">
    <tr>
        <th>
        STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hovaten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhomMau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solanhienmau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CMND)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.gioitinh)
        </th>

        <th>
            Trạng thái
        </th>
        <th>
           Đợt xét nghiệm
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thoigianhien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BloodID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hovaten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgaySinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NhomMau)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Solanhienmau)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CMND)
    </td>

    @if (item.gioitinh == 0)
    {

        <td>
            Nữ
        </td>
    }
    else
    {
        <td>
            Nam
        </td>
    }

    @if (item.IsActive == null || item.IsActive == 0)
    {

        <td>
            chưa  hiến máu
        </td>
    }
    else if (item.IsActive == 1)
    {
        <td>
            Đã đăng kí hiến
        </td>
    }
    else
    {
        <td>
            đã hiến
        </td>
    }
    <td>
        @Html.DisplayFor(modelItem => item.BatchName)
    </td>
    <td>
        @Html.ValueFor(modelItem => item.Thoigianhien, "{0:dd/MM/yyyy}")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>

</tr>
    }

</table>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
