            @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control datetimepicker", type = "date" })


            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
