@model BoolDonationApp.Models.BloodDonation

@{
    Layout = null;
    ViewBag.Title = "FormHienMau";

}
<style>
    .buttons {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        text-align: center;
        /*   padding: 2em 0em; */
    }

    .containers {
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        background-color: #FFF;
        padding: 40px 0px;
        width: 240px;
    }

    h1 {
        text-align: left;
        color: #444;
        letter-spacing: 0.05em;
        margin: 0 0 0.4em;
        font-size: 1em;
    }

    p {
        text-align: left;
        color: #444;
        letter-spacing: 0.05em;
        font-size: 0.8em;
        margin: 0 0 2em;
    }


    .btn {
        letter-spacing: 0.1em;
        cursor: pointer;
        font-size: 14px;
        font-weight: 400;
        line-height: 45px;
        max-width: 160px;
        position: relative;
        text-decoration: none;
        text-transform: uppercase;
        width: 100%;
    }

        .btn:hover {
            text-decoration: none;
        }

    /*btn_background*/
    .effect01 {
        color: #FFF;
        border: 4px solid #000;
        box-shadow: 0px 0px 0px 1px #000 inset;
        background-color: #007bff;
        overflow: hidden;
        position: relative;
        transition: all 0.3s ease-in-out;
    }

      

      
</style>
<link href="~/Content/FormBool.css" rel="stylesheet" />
<link href="~/Content/buttons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <div class="bool">
        <div class="formBool">
            <div class="container">
                <div class="formBool-container">
                    <div class="formBool-left">
                        <img src="~/Content/Images/dai hoi 1.png" alt="Logo" class="imgBood">
                        <h4 class="text-logo">Bệnh viện Đà Nẵng</h4>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="container">
            <div class="form-container">
        @using (Html.BeginForm("FormHienMau", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="tittle-text">Phiếu đăng kí hiến máu tình nguyện</h4>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <p class="control-label col-md-2">Đợt hiến máu <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.BatchID, ViewBag.ListOfBatch as IEnumerable<SelectListItem>, "Chọn đợi hiến máu", new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="form-group">
                        <p class="control-label col-md-2">Họ và tên <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Hovaten, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Hovaten, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="control-label col-md-2">Giới tính :</p>
                        <div class="col-md-12">
                            <select class="form-control" aria-label="Default select example" name="Gioitinhform">
                                <option disabled selected>Giới tính</option>
                                <option value=1>Nam </option>
                                <option value=0>Nữ</option>
                            </select>
                        </div>
                        

                    </div>

                    <div class="form-group">
                        <p class="control-label col-md-2">Ngày sinh <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p class="control-label col-md-2">Số điện thoại <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p class="control-label col-md-2">Địa chỉ <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p class="control-label col-md-2">Email <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p class="control-label col-md-2">Nhóm máu <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.NhomMau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NhomMau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="control-label col-md-2">Số CMND <b class="text-danger">(*)</b>:</p>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="">
                        <div class="col-md-offset-2 col-md-12">
                            <p class="text-danger">@ViewBag.Danger</p>
                        </div>
                    </div>
                    
                        <div class="buttons">
                            <div class="containers">
                                <input type="submit" value="Xác nhận" class="btn effect01" />
                               
                            </div>
                        </div>
                   
                </div>
        }
                </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</body>